<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kios.mapper.RoleMapper">

    <select id="create" parameterType="com.example.kios.model.request.EmployeeRequest"
            resultType="com.example.kios.model.response.EmployeeResponse">
        <foreach collection="role" item="item" >
            INSERT INTO employee_role(
                employee_id,
                service_id
            )VALUES(
                #{id},
                #{item}
            )RETURNING *;
        </foreach>
    </select>

    <select id="get" parameterType="String" resultType="String">
        select service_id
        from employee_role
        where employee_id = #{id}
    </select>

    <delete id="delete" parameterType="String">
        DELETE FROM employee_role
        WHERE employee_id = #{id}
    </delete>
</mapper>